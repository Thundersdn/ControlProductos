<div class="page-header">
  <%= link_to new_usuario_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Usuario
  <% end %>
  <h1>Listing usuarios</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Rut</th>
            <th>Nombre</th>
            <th>Cargo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuarios) do |usuario| %>
            <td><%= usuario.rut %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.cargo %></td>
            <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
